{% extends 'base.html.twig' %}

{% block title %}Create a Room - {{ parent() }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-0">Create a Room</h1>
            </div>
            <div class="card-body">
                {% if errors is defined and errors|length > 0 %}
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            {% for error in errors %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Room Name</label>
                        <input type="text" id="name" name="name" class="form-control" required>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="is_private" name="is_private" value="1">
                        <label class="form-check-label" for="is_private">Private Room</label>
                        <div class="form-text">Private rooms require a password to join</div>
                    </div>

                    <div class="mb-3" id="password-group" style="display: none;">
                        <label for="password" class="form-label">Room Password</label>
                        <input type="password" id="password" name="password" class="form-control">
                        <div class="form-text">This password will be shared with people you want to invite</div>
                    </div>

                    <button type="submit" class="btn btn-primary">Create Room</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const isPrivateCheckbox = document.getElementById('is_private');
    const passwordGroup = document.getElementById('password-group');
    
    isPrivateCheckbox.addEventListener('change', function() {
        if (this.checked) {
            passwordGroup.style.display = 'block';
        } else {
            passwordGroup.style.display = 'none';
        }
    });
});
</script>
{% endblock %}